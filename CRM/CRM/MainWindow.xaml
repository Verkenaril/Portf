<Window x:Class="CRM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRM"
        xmlns:views="clr-namespace:CRM" 
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1200">

    <Window.Resources>
        <Style x:Key="tab_item_style" TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border" Background="{TemplateBinding Background}">
                            <ContentPresenter ContentSource="Header" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Выбранная вкладка - ВЫСШИЙ приоритет -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="#435fe5"/>
                            </Trigger>

                            <!-- Наведение на НЕВЫБРАННУЮ вкладку -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="False"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="#435fe5"/>
                                <MultiTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard TargetProperty="Background.Color">
                                            <ColorAnimation From="#435fe5" To="White" Duration="0:0:0.25"></ColorAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                    <BeginStoryboard>
                                        <Storyboard TargetProperty="Foreground.Color">
                                            <ColorAnimation To="#435fe5" From="White" Duration="0:0:0.25"></ColorAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </MultiTrigger.EnterActions>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#435fe5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="-2, 0, 0, 0"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
        </Style>



    </Window.Resources>
    <Grid Background="#FF435FE5">
        <TabControl TabStripPlacement="Left" BorderBrush="White">
            <TabItem Header="Контакты" Style="{StaticResource tab_item_style}" >
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="GotFocus">
                        <i:InvokeCommandAction Command="{Binding TabContactsActivatedCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <views:TabItemContacts/>
            </TabItem>
            <TabItem Header="Задания" Style="{StaticResource tab_item_style}">
                <views:TabItemTasks/>
            </TabItem>
            <TabItem Header="Сотрудники" Style="{StaticResource tab_item_style}">
                <views:TabItemWorkers/>
            </TabItem>
            <TabItem Header="Заметки" Style="{StaticResource tab_item_style}">
                <views:TabItemReminders/>
            </TabItem>
            <TabItem Header="Статистика" Style="{StaticResource tab_item_style}">
                <views:TabItemStatistics/>
            </TabItem>
            
            
            <!-- Пустышка для ширины вкладок. Должна быть именно внизу. так как на верху создаёт какие-то перескоки при нажатии-->
            <TabItem Visibility="Hidden">
                <TabItem.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Width" Value="100"/>
                        <Setter Property="Height" Value="0"/>
                    </Style>
                </TabItem.Resources>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
