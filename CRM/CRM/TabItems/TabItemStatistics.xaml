<UserControl x:Class="CRM.TabItemStatistics"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CRM"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="15, 0, 0, 0">
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Width="200" Grid.Column="0">
                <TextBlock Margin="0, 0, 0, 0" Text="Задачи" TextAlignment="Center" Foreground="Black" FontSize="24"/>
                <lvc:PieChart x:Name="pieChart" Series="{Binding MySeries}"  Height="200" Width="200"/>
                <ItemsControl ItemsSource="{Binding tlp}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Fill="{Binding color}" Margin="10, 0, 0, 0" Width="10" Height="10"/>
                                <TextBlock Width="80" Text="{Binding title}" Margin="10, 0, 0, 0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding quantity}" Margin="10, 0, 0, 0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding percent, StringFormat='{}{0} %'}" Margin="10, 0, 0, 0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <StackPanel Width="200" Grid.Column="1">
                <TextBlock Margin="0, 0, 0, 0" Text="Сотрудники" TextAlignment="Center" Foreground="Black" FontSize="24"/>
                <lvc:PieChart x:Name="pieChart2" Series="{Binding workers_chart}"  Height="200" Width="200"/>
                <ItemsControl ItemsSource="{Binding tlp_for_workers}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Fill="{Binding color}" Margin="10, 0, 0, 0" Width="10" Height="10"/>
                                <TextBlock Width="100" Text="{Binding title}" Margin="10, 0, 0, 0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding quantity}" Margin="10, 0, 0, 0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding percent, StringFormat='{}{0} %'}" Margin="10, 0, 0, 0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <StackPanel Width="200" Grid.Column="2">
                <TextBlock Margin="0, 0, 0, 0" Text="Проекты" TextAlignment="Center" Foreground="Black" FontSize="24"/>
                <lvc:PieChart x:Name="pieChart3" Series="{Binding projects_chart}"  Height="200" Width="200"/>
                <ItemsControl ItemsSource="{Binding tlp_for_projects}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Fill="{Binding color}" Margin="10, 0, 0, 0" Width="10" Height="10"/>
                                <TextBlock Width="100" Text="{Binding title}" Margin="10, 0, 0, 0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding quantity}" Margin="10, 0, 0, 0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding percent, StringFormat='{}{0} %'}" Margin="10, 0, 0, 0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
