<UserControl x:Class="CRM.TabItemContacts"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CRM"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/MainBtnStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Background="#FFf5f5f5">
        <StackPanel Orientation="Vertical" Height="70" VerticalAlignment="Top" Margin="15, 10, 15, 0">
            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource btn_style}" Height="30" Background="#435fe5" Foreground="White" Content="Фильтры"/>
                <Button Style="{StaticResource btn_style}" Command="{Binding CreateContactCommand}" Margin="10, 0, 0, 0" Height="30" Background="#435fe5" Foreground="White" Content="Добаить контакт" />
            </StackPanel>
            <Grid Margin="0, 10, 0, 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Command="{Binding SearchClientCommand}" Style="{StaticResource btn_style}" Height="30" Width="80" Background="#435fe5" Foreground="White" Content="Поиск" HorizontalAlignment="Left"/>
                <TextBox Text="{Binding text_box_input}" Height="30" VerticalContentAlignment="Center" Grid.Column="1"/>
            </Grid>
        </StackPanel>

        <StackPanel Background="white" Orientation="Horizontal" Height="70" VerticalAlignment="Top" Margin="15, 90, 15, 0">
            <TextBlock TextWrapping="Wrap" Text="Имя" Foreground="Black" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="70,0,30,0" Width="220"/>
            <TextBlock TextWrapping="Wrap" Text="Номер" Foreground="Black" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,30,0" Width="150"/>
            <TextBlock TextWrapping="Wrap" Text="Компания" Foreground="Black" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,30,0" Width="130"/>
            <TextBlock TextWrapping="Wrap" Text="Примечания" Foreground="Black" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,30,0" Width="150"/>
            <StackPanel.Effect>
                <DropShadowEffect ShadowDepth="1"/>
            </StackPanel.Effect>
        </StackPanel>

        <ScrollViewer Margin="15, 170, 15, 0" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ClientsList" Foreground="Black" ItemsSource="{Binding contacts_to_view }" local:AnimatedRemovalBehavior.Enable="True">
            <ItemsControl.Resources>
                <Storyboard x:Key="FadeInStoryboard">
                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3"/>
                </Storyboard>
            </ItemsControl.Resources>
            <ItemsControl.Style>
                <Style TargetType="ItemsControl">
                    <Setter Property="Opacity" Value="0"/>
                    <Style.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard >
                                <Storyboard >
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Style.Triggers>
                </Style>
            </ItemsControl.Style>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>

                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Background="white" Margin="0, 0, 0, 15" >
                        <StackPanel.Effect>
                            <DropShadowEffect ShadowDepth="1"/>
                        </StackPanel.Effect>
                        <Image Source="/avatar-2.png" Width="60" Height="60" />

                        <TextBlock Text="{Binding name}" Margin="10, 0, 0, 0" Width="250" TextWrapping="Wrap" Foreground="Black" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding phone}" Margin="0, 0, 30, 0" Width="150" TextWrapping="Wrap" Foreground="Black" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding company}" Margin="0, 0, 30, 0" Width="130" TextWrapping="Wrap" Foreground="Black" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding note}" Width="150" TextWrapping="NoWrap" Foreground="Black" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>


                        <Button Style="{StaticResource btn_style}" Command="{Binding EditContactCommand}"  Background="#435fe5"   Margin="30, 0, 15, 0" Foreground="White" Height="30" Content="Редактировать"/>
                        <Button Style="{StaticResource btn_style_del}" Command="{Binding DeleteContactCommand}" Background="Red" Foreground="White" Height="30" Content="Удалить"/>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
