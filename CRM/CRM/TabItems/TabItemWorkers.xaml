<UserControl x:Class="CRM.TabItemWorkers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CRM"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="15, 0, 0, 0">
        <WrapPanel>
            <Border CornerRadius="20" Width="200" Height="80" Background="White">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="1"/>
                </Border.Effect>
                <StackPanel Margin="7">
                    <TextBlock Text="Name Family" FontSize="17" FontWeight="Bold"/>
                    <TextBlock Text="Super Worker" VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" Height="30">
                        <Ellipse Fill="Aqua" Width="10" Height="10" VerticalAlignment="Center"/>
                        <TextBlock Text="on work" VerticalAlignment="Center" Margin="5, 0, 0, 3"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </WrapPanel>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl Foreground="Black" ItemsSource="{Binding workers}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border CornerRadius="20" Width="200" Height="80" Background="White" Margin="0, 0, 10, 10">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="1"/>
                        </Border.Effect>
                        <StackPanel Margin="7">
                            <TextBlock Text="{Binding name}" FontSize="17" FontWeight="Bold"/>
                            <TextBlock Text="{Binding position}" VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" Height="30">
                                <Ellipse Fill="{Binding color_status}" Width="10" Height="10" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding title_status}" VerticalAlignment="Center" Margin="5, 0, 0, 3"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
