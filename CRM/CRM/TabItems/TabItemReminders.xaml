<UserControl x:Class="CRM.TabItemReminders"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CRM"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/MainBtnStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="15, 0, 0, 0" >
        <TextBlock Text="Шаблоны" FontSize="18" Foreground="Black"/>
        <StackPanel Background="#FFE6E6E6" Orientation="Horizontal" VerticalAlignment="Top" Height="150" Margin="0, 25, 20, 0">
            <Button Width="100" Background="White" Command="{Binding CallCreateReminderCommand}" CommandParameter="{Binding Background, RelativeSource={RelativeSource Self}}">
                <Grid>
                    <TextBlock Text="+" Foreground="Black" FontSize="72" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" FontFamily="Chiller"/>
                </Grid>
            </Button>
            <Button Width="100" Background="#FFF1E454" Command="{Binding CallCreateReminderCommand}" CommandParameter="{Binding Background, RelativeSource={RelativeSource Self}}">
                <Grid>
                    <TextBlock Text="+" Foreground="Black" FontSize="72" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" FontFamily="Chiller"/>
                </Grid>
            </Button>
            <Button Background="#FFF77373" Width="100" Command="{Binding CallCreateReminderCommand}" CommandParameter="{Binding Background, RelativeSource={RelativeSource Self}}">
                <Grid>
                    <TextBlock Text="+" Foreground="Black" FontSize="72" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" FontFamily="Chiller"/>
                </Grid>
            </Button>
            <Button Background="#FF61FD5C" Width="100" Command="{Binding CallCreateReminderCommand}" CommandParameter="{Binding Background, RelativeSource={RelativeSource Self}}">
                <Grid>
                    <TextBlock Text="+" Foreground="Black" FontSize="72" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" FontFamily="Chiller"/>
                </Grid>
            </Button>
            <Button Background="#FF5AFDFA" Width="100" Command="{Binding CallCreateReminderCommand}" CommandParameter="{Binding Background, RelativeSource={RelativeSource Self}}">
                <Grid>
                    <TextBlock Text="+" Foreground="Black" FontSize="72" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" FontFamily="Chiller"/>
                </Grid>
            </Button>
            <Button Background="#FFAAC6FF" Width="100" Command="{Binding CallCreateReminderCommand}" CommandParameter="{Binding Background, RelativeSource={RelativeSource Self}}">
                <Grid>
                    <TextBlock Text="+" Foreground="Black" FontSize="72" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" FontFamily="Chiller"/>
                </Grid>
            </Button>
        </StackPanel>
        <TextBlock Text="Заметки" Margin="0, 200, 0, 0" FontSize="18" Foreground="Black"/>
        <ScrollViewer Margin="0, 230, 0, 0" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding reminders_to_view}" >
            <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button BorderBrush="{x:Null}" Command="{Binding EditNoteCommand}" Width="250" Height="190" Background="{Binding color}" Margin="0, 0, 20, 20">
                        <Button.Effect>
                            <DropShadowEffect ShadowDepth="2"/>
                        </Button.Effect>
                        <Button.Template>
                            <ControlTemplate>
                                <Border Background="{Binding color}" CornerRadius="10">
                                    <StackPanel Width="220" Height="190" >
                                        <Button Content="X" Command="{Binding DeleteNoteCommand}"  Width="150" Foreground =" White" Style="{StaticResource btn_style_del}" FontWeight="Bold" FontSize="14" Background="Red"/>
                                        <Border BorderThickness="0,0,0,2" BorderBrush="Black">
                                            <TextBlock Foreground="Black" Text="{Binding title}" FontFamily="Comic Sans MS" FontSize="23"/>
                                        </Border>
                                        <TextBlock Foreground="Black" Text="{Binding content}" FontFamily="Century Gothic" TextWrapping="Wrap" FontSize="16"/>
                                    </StackPanel>
                            </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

    </Grid>
</UserControl>
