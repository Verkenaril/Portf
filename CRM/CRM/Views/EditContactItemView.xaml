<Window x:Class="CRM.EditContactItemView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRM"
        mc:Ignorable="d"
        Title="EditContactItemView" Height="330" Width="250">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/MainBtnStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <StackPanel>
        <TextBlock HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" Text="Имя" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="{Binding name}" VerticalAlignment="Top" Width="150"/>

        <TextBlock HorizontalAlignment="Left" Margin="10,20,0,0" TextWrapping="Wrap" Text="Номер" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="{Binding phone}" VerticalAlignment="Top" Width="150"/>

        <TextBlock HorizontalAlignment="Left" Margin="10,20,0,0" TextWrapping="Wrap"  Text="Компания" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap"  Text="{Binding company}" VerticalAlignment="Top" Width="150"/>

        <TextBlock HorizontalAlignment="Left" Margin="10,20,0,0" TextWrapping="Wrap" Text="Примечание" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="{Binding note}" VerticalAlignment="Top" Width="150"/>

        <Button Content="Сохранить" Background="#435fe5" Foreground =" white" Style="{StaticResource btn_style}" Height="30" Command="{Binding SaveCommand}" HorizontalAlignment="Left" Margin="10,15,0,0" VerticalAlignment="Top"/>
    </StackPanel>
</Window>
