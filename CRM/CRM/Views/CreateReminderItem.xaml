<Window x:Class="CRM.CreateReminderItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRM"
        mc:Ignorable="d"
        Title="CreateReminderItem" Height="270" Width="320">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/MainBtnStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Заголовок" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Center" Margin="0,31,0,0" TextWrapping="Wrap" Text="{Binding title}" VerticalAlignment="Top" Width="280"/>

        <TextBlock HorizontalAlignment="Left" Margin="10,65,0,0" TextWrapping="Wrap" Text="Содержание" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Center" Margin="0,86,0,0" TextWrapping="Wrap" Text="{Binding content}" VerticalAlignment="Top" Width="280" Height="92"/>

        <Button Content="Добавить" Command="{Binding CreateReminderCommand}" Background="#435fe5" Foreground =" white" Style="{StaticResource btn_style}" Height="30" HorizontalAlignment="Left" Margin="10,190,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
